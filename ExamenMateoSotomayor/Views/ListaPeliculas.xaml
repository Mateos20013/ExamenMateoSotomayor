<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ExamenMateoSotomayor.ViewModels"
    x:Class="ExamenMateoSotomayor.Views.ListaPeliculasPage"
    Title="PelÃ­culas Consultadas">

    <ContentPage.BindingContext>
        <vm:ListaPeliculasViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <ListView x:Name="listMovies" ItemsSource="{Binding Peliculas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding Genre}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>


