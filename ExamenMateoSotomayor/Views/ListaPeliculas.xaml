<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ExamenMateoSotomayor.ViewModels"
    x:Class="ExamenMateoSotomayor.Views.ListaPeliculasPage"
    Title="Mateo Sotomayor">

    <ContentPage.BindingContext>
        <vm:ListaPeliculasViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <ListView x:Name="listPeliculas" ItemsSource="{Binding Peliculas}" />
    </StackLayout>
</ContentPage>


