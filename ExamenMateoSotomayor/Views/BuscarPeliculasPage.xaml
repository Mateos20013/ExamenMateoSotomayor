<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ExamenMateoSotomayor.ViewModels"
    x:Class="ExamenMateoSotomayor.Views.BuscarPeliculasPage"
    Title="Buscar Películas">

    <ContentPage.BindingContext>
        <vm:BuscarPeliculasViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Entry x:Name="entrySearch" Placeholder="Ingresa el nombre de la película" Text="{Binding SearchText}" />
        <Button x:Name="btnSearch" Text="Buscar" Command="{Binding SearchCommand}" />
        <Button x:Name="btnClear" Text="Limpiar" Command="{Binding ClearCommand}" />
        <Label x:Name="lblMessage" Text="{Binding Message}" TextColor="Red" />
    </StackLayout>
</ContentPage>

